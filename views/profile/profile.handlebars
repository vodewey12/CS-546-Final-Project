<div class="container">
  <div class="row row-content align-items-center">
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Related Tags</h5>
          <hr>
          <div class="courses">
            <ul>
              {{#each courses}}
              <li>{{courses}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="col-9">
      <div class="row userInfo">
        <div class="col-2">
          <img src="../../public/imgs/portrait.jpg" alt="portrait" width="150" height="150">
        </div>
        <div class="col-2"></div>
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title">{{userName}}</h5>
            <p class="card-text">Email: {{email}} </p>
            <p class="card-text">Major: {{Major}} </p>
            <p class="card-text">Graduate Year: {{gradYear}}</p>
          </div>
        </div>
      </div><hr>
      <div><h6>My Posts</h6></div>
    </div>
  </div>

  {{#each userPosts}}  <!-- every single post record goes here -->
    {{ > profilePostCard }}
  {{/each}}

</div>