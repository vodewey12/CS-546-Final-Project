<link rel="stylesheet" href="/public/css/login.css">


<div class="text-center">

    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>

    <form id="login-form" class="form-signin" method="POST" action="/user/login">

        <div class="form-label-group">
            <label for="email" class="sr-only">Email</label>
            <input type="email" placeholder="Enter Email" name="email" id="email" value="{{email}}" required autofocus>
        </div>

        <div class="form-label-group">
            <label for="password" class="sr-only">Password</label>
            <input type="password" placeholder="Enter Password" name="password" id="password" value="{{password}}"
                placeholder="password" required autofocus>
        </div>

        {{#if error }}
        <div class="form-group">
            <div class="alert alert-danger">
                {{ error }}
            </div>
        </div>
        {{/if}}

        <div class="form-group alert alert-danger" id="error-container" hidden>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">Don't have an account yet? <a href="/auth/register">Sign Up</a></p>

    </form>
</div>