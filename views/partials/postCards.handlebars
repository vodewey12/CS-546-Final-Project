<link rel="stylesheet" href="/public/css/dashboard.css" />

<div class="post-cards"><br />
  <img
    src="https://www.w3schools.com/w3images/avatar2.png"
    alt="Avatar"
    class="avatar-image"
    style="width:60px"
  />

  <h4>{{title}}</h4>
  <span>Posted on {{formattedDate postTime}} by {{userName}}</span><br />
  <hr />
  <div class="card-content">
    <p>{{postContent}}</p>
    <div class="chip-container">
      {{#each tags}}
        <div class="chip">
          {{this}}
        </div>
      {{/each}}
    </div>
  </div>
  <hr />
  <div class="card-actions">
    <form
      style="width:18%; float:left; overflow:hidden; margin-right:10px"
      action=""
    >
      <button type="button" class="card-actions-button"><i
          class="fa fa-thumbs-up"
        ></i>
        Like</button>
    </form>
    <form
      style="width:18% clear:right; overflow:hidden; margin-right:10px"
      action="/posts/{{_id}}"
    >
      <button type="submit" class="card-actions-button"><i
          class="fa fa-comment"
        ></i>
        Comment</button>
    </form>
  </div>
</div>